    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "lib",
    "removeComments": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": ["@types/node"]
  },
  "include": ["src/**/*.ts"]
}
